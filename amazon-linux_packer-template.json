{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_name": "amazon-linux_{{isotime \"02Jan2006\"}}"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "HelloWorld-{{isotime \"02-Jan-06 03_04_05\"}}",
        "ami_description": "Customized Amazon Linux",
        "associate_public_ip_address": "true",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn-ami*-ebs",
                "root-device-type": "ebs"
            },
            "owners": ["137112412989", "591542846629", "801119661308", "102837901569", "013907871322", "206029621532", "286198878708", "443319210888"],
            "most_recent": true
        }
    }],

    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo yum update -y",
                "sudo yum install java -y",
                "wget http://apachemirror.wuchna.com/tomcat/tomcat-8/v8.5.50/bin/apache-tomcat-8.5.50.tar.gz",
                "tar -xvf apache-tomcat-8.5.50.tar.gz",
                "./apache-tomcat-8.5.50/bin/startup.sh",
				        "sudo /usr/sbin/update-motd --disable",
                "echo 'No unauthorized access permitted' | sudo tee /etc/motd",
                "sudo rm /etc/issue",
                "sudo ln -s /etc/motd /etc/issue",
                "sudo yum install -y elinks screen"
            ]
        },
        {
          "type":"file",
           "source":"target/hello-0.0.1-SNAPSHOT.war",
           "destination":"/home/ec2-user/apache-tomcat-8.5.50/webapps/hello.war"
        },
        {
          "type":"shell",
           "inline":[
             "sh /home/ec2-user/apache-tomcat-8.5.50/bin/startup.sh"
           ]
        }
    ]
}
